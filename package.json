{
	"name": "@hina-is/root",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"site"
	],
	"scripts": {
		"update-data": "bun --filter=@hina-is/bestdori run update",
		"build-site": "bun update-data && bun --filter=@hina-is/site run build",
		"format": "prettier . --write"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "4.7.1",
		"@xeonlink/prettier-plugin-organize-attributes": "1.1.0",
		"prettier": "3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-tailwindcss": "0.7.2"
	}
}
