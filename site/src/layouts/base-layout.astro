---
import "~/styles/global.css";

interface Props {
	background?: { src: string; alt: string };
}

const { background } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="hina-is" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body
		{...!Astro.locals.clientTimezone && {
			"hx-get": "",
			"hx-trigger": "load",
		}}
	>
		<div class="relative container mx-auto flex h-screen flex-col">
			{
				background && (
					<img
						src={background.src}
						alt={background.alt}
						class="absolute h-full w-full object-cover brightness-67 dark:brightness-33"
					/>
				)
			}

			<main
				hx-indicator="#app-loader"
				class="relative flex-1 overflow-auto py-8 shadow-sm"
			>
				<slot />
			</main>
		</div>

		<div
			id="app-loader"
			class="htmx-indicator bg-base-100/50 fixed inset-0 z-20"
		>
			<iconify-icon
				icon="svg-spinners:bars-scale-fade"
				width="none"
				class="center absolute size-24"></iconify-icon>
		</div>
	</body>
</html>

<script>
	import "htmx.org";
	import "iconify-icon";

	document.body.addEventListener("htmx:configRequest", (e) => {
		const event = e as Event & {
			detail: { headers: Record<string, string> };
		};

		event.detail.headers["x-timezone"] =
			Intl.DateTimeFormat().resolvedOptions().timeZone;
	});
</script>
